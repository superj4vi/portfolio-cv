<style lang="scss">
  .navbar__container {
    z-index: 9999;
		position: relative;
		font-weight: 500;
    background-color:var(--gray-50)
  }

  @media (max-width: 50em) {
    .navbar__container {
      display: grid;
      flex-direction: column;
      grid-template-columns: 1fr auto 1fr;
      align-items: center;
      padding: 2.5rem 5rem;
      gap: 1rem;
    }
  }

  .menu__header{
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    gap: 0.3rem;
    padding: 0.56rem;

  }
  @media (max-width: 50em){
    .menu__header{
      display: flex;
      flex-direction: column;
    }
  }
  .logo {
    width: var(--logo-size);
    height: var(--logo-size);
  }
  @media (max-width: 50em){
    .logo{
      display: none;
    }
  }

  .menu__link {
    line-height: 0.25rem;
    text-align: center;
    padding: 0.5rem 0.5625rem;
    font-size: 0.12rem;
    border:1px;

  }
  .menu__link--item {
    margin: 0;
    display: flex;
    gap: 1rem;
    padding: 0.7rem;
    align-items: center;
    border-radius: 99999rem;
    background: radial-gradient(var(--gray-50), var( --gray-100) 150%);
    box-shadow: var(--shadow-md);
    /* font-size: medium; */
    & .link {
      display: block;
      font-family: 'Raleway', sans-serif;
      text-decoration: none;
      color: var(--gray-999);
      font-size:var(--text-md);
      text-align: center;
      padding: 1rem 2rem;
      border-radius: 3px;
      transition: background 0.5s;

      &:hover{
        background-color: var(--accent-regular);
      }
    }
  }


  .menu__link--social {
    font-size: 1.65rem;
    display: flex;
    justify-content: flex-end;
    flex-wrap: wrap;
    align-items: center;
  }

  .social {
    display: flex;
    flex-direction: row;
    gap: 1rem;
    padding: 1.63rem;
    color: var(--accent-regular);
    padding: 0.62rem;
    /* background: red; */
  }

  svg {
    vertical-align: middle;
    width: var(--text-3xl);
    height:var(--text-3xl);
  }
</style>
